<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:gravity="center">

    <TextView
        android:id="@+id/test_result_title"
        style="@style/CommonText2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_test_result_title"
        android:text="测试"
        app:layout_heightPercent="14%h"
        app:layout_widthPercent="24%w" />

    <Button
        android:id="@+id/test_result_success"
        style="@style/CommonText2"
        android:layout_below="@id/test_result_title"
        android:layout_alignStart="@id/test_result_title"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_common"
        android:text="成功"
        app:layout_heightPercent="5.5%h"
        app:layout_marginTopPercent="4%h"
        app:layout_widthPercent="11%w" />

    <Button
        android:id="@+id/test_result_fail"
        style="@style/CommonText2"
        android:layout_below="@id/test_result_title"
        android:layout_alignEnd="@id/test_result_title"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_common"
        android:text="失败"
        app:layout_heightPercent="5.5%h"
        app:layout_marginTopPercent="4%h"
        app:layout_widthPercent="11%w" />

</com.zhy.android.percent.support.PercentRelativeLayout>