<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/test_result_title"
        style="@style/CommonText1"
        android:layout_centerHorizontal="true"
        android:text="测试"
        app:layout_marginTopPercent="20%h" />

    <Button
        android:id="@+id/test_result_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="成功" />

    <Button
        android:id="@+id/test_result_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/test_result_success"
        android:text="失败"
        app:layout_marginLeftPercent="20%w" />
</com.zhy.android.percent.support.PercentRelativeLayout>